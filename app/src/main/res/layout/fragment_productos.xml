            android:textStyle="bold"
            android:textColor="@color/green"
            android:fontFamily="serif"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/product1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:padding="15dp"
                android:background="@drawable/rounded_background"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/imgProduct1"
                        android:layout_width="85sp"
                        android:layout_height="90sp"
                        app:srcCompat="@drawable/producto_hogar"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nameProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/nameProduct1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:padding="10sp"
                            android:fontFamily="serif"
                            android:textColor="@color/black"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/priceProduct1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/priceProduct1"
                                android:textSize="15sp"
                                android:paddingStart="10dp"
                                android:fontFamily="serif"

                                />

                            <TextView
                                android:id="@+id/countProduct1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/amountProduct1"
                                android:textSize="15sp"
                                android:paddingStart="15dp"
                                android:fontFamily="serif"

                                />

                        </LinearLayout>

                        <Button
                            android:id="@+id/buttonAddCartProduct1"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="@string/textAddCart"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:backgroundTint="@color/green"
                            app:strokeColor="@color/orange"
                            app:strokeWidth="2dp"
                            android:fontFamily="serif"
                            android:textColor="@color/white"
                            />



                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/descriptionProduct1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="@string/descriptionProduct1"
                    android:textSize="15sp"
                    android:paddingTop="5dp"
                    android:fontFamily="serif"
                    />

